pipeline {
  agent any
  environment {
    PATH = "/bin:/usr/sbin:/usr/bin:/usr/local/bin"
  }
  stages {
    stage('Build') {
      steps {
        sh 'make'
      }
    }
    stage('Test'){
      steps {
        sh 'coverage run -m unittest discover'
        sh 'coverage html'
        publishHTML (target: [allowMissing: false,
          alwaysLinkToLastBuild: false, keepAll: true,
          reportDir: 'htmlcov', reportFiles: 'index.html',
          reportName: "Coverage Report"])

        sh '(pylint --output-format=parseable --reports=no recepmod > pylint.log || echo "pylint exited with $?")'

        step([
          $class                     : 'WarningsPublisher',
          parserConfigurations       : [[
          parserName: 'PYLint',
          pattern   : 'pylint.log'
          ]],
          unstableTotalAll           : '0',
          usePreviousBuildAsReference: true
          ])
      }
    }
    stage('Deploy') {
      steps {
        sh 'make upload'
      }
    }
  }
}
