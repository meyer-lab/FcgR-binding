pipeline {
  agent any
  environment {
    PATH = "/bin:/usr/sbin:/usr/bin:/usr/local/bin:/usr/local/texlive/2016/bin/x86_64-darwin/"
  }
  stages {
    stage('Profile') {
      steps {
        sh 'make profile'
        archiveArtifacts artifacts: 'profile.png', onlyIfSuccessful: true
      }
    }
    stage('Build') {
      steps {
        sh 'make clean'
        sh 'make'
      }
    }
    stage('Test'){
      steps {
        sh 'coverage run -m unittest discover'
        sh '(pylint --rcfile=.pylintrc recepmod > pylint.log || echo "pylint exited with $?")'

        step([
          $class                     : 'WarningsPublisher',
          parserConfigurations       : [[
          parserName: 'PYLint',
          pattern   : 'pylint.log'
          ]],
          unstableTotalAll           : '1000',
          usePreviousBuildAsReference: true
          ])
      }
    }
    stage('Deploy') {
      steps {
        sh 'make upload'
        archiveArtifacts artifacts: 'Manuscript/Manuscript.pdf', onlyIfSuccessful: true
      }
    }
  }
}
